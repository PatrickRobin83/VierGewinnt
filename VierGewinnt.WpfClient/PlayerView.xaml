<UserControl x:Class="VierGewinnt.WpfClient.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VierGewinnt.WpfClient"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderThickness="5" BorderBrush="Silver"> 
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Player A" 
                       FontFamily="Segovia UI Light" 
                       FontSize="40"
                       HorizontalAlignment="Center"
                       Foreground="DarkRed" />
            <TextBlock Grid.Row="1" Text="21 Spielsteine"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       Margin="0,2"
                       Foreground="DarkRed"/>
        </Grid>
        </Border>
</UserControl>
